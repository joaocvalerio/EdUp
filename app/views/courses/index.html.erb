<h1><%= current_user.company.name %> Courses</h1>
<% if policy(Course).create? %>
  <%= link_to "Add Course", new_course_path %>
<% end %>

<% @courses.each do |course| %>
  <h2 class="course-name"><%= course.name %> Course</h2>
  <p><%= course.description%></p>
  <ol>
  <% course.parts.each do |part| %>
    <li><%= part.description %></li>
  <% end %>
  </ol>
  <% if policy(course).show? %>
    <%= link_to "Show", course_path(course) %>
  <% end %>
  <% if policy(course).edit? %>
    <%= link_to "Edit", edit_course_path(course) %>
  <% end %>
  <% if policy(course).destroy? %>
    <%= link_to "Delete", course_path(course), method: :delete, data: { confirm:
     "Are you sure?" } %>
  <% end %>
<% end %>
